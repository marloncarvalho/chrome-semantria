{
   "description": "Semantria Google Chrome Extension",
   "manifest_version": 3,
   "name": "Sentiment Analysis using Semantria",
   "permissions": [
      "https://api30.semantria.com/",
      "contextMenus",
     "tabs"
   ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
     "scripts": ["script.js","SemantriaJavaScriptSDK.js"]
   },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
   },
   "version": "1.0"
}
